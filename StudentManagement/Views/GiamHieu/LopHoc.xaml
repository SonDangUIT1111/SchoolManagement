<Page x:Class="StudentManagement.Views.GiamHieu.LopHoc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManagement.Views.GiamHieu"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1033" 
      d:DesignWidth="1056"
      Title="LopHoc"
      Background="#FFECECEC"
      DataContext="{StaticResource LopHocVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="228" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="#110357" 
                BorderThickness="0" 
                CornerRadius="30" 
                Grid.Row="0" 
                Background="#33778C" 
                Margin="12" >
            <Grid>
                <TextBlock Text="Lớp học" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           FontSize="60" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20"/>
                <Border BorderBrush="#FF000000" 
                        BorderThickness="0" 
                        CornerRadius="30" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        Width="325"
                        Height="78"
                        Margin="21"
                        Background="White">
                </Border>
            </Grid>
        </Border>
        <Border 
            BorderBrush="#FF000000"  
            BorderThickness="0" 
            CornerRadius="10" 
            Grid.Row="1" 
            Background="White" 
            Margin="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="110" ></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <DockPanel>
                    <TextBlock 
                        Text="Danh sách lớp học" 
                        Margin="25" 
                        FontSize="30" 
                        FontWeight="SemiBold"/>
                    <TextBox
                        HorizontalAlignment="Center"
                        Height="50"
                        Width="350"
                        materialDesign:HintAssist.Hint="Nhập tên lớp"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}">
                    </TextBox>
                    <Button
                        Width="90"
                        Content="Tìm kiếm"
                        Foreground="White"
                        Command="{Binding ThemLop}">
                        
                    </Button>
                    <Button x:Name="ThemGiaoVien" 
                        Width="179" 
                        Height="64" 
                        Background="#33418C"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="25"
                        Content="Thêm Lớp" 
                        FontSize="19" 
                        FontWeight="Bold"
                        Foreground="White">
                       </Button>
                    </DockPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" ></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Grid.Row="0"
                        HorizontalAlignment="Center">
                        <ComboBox materialDesign:HintAssist.Hint="Niên khoá"
                              IsEditable="False"
                              Width="200"
                              Height="40"
                              Padding="10"
                              HorizontalAlignment="Left"
                              Margin="25 0 0 0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        </ComboBox>
                        <ComboBox materialDesign:HintAssist.Hint="Khối"
                              IsEditable="False"
                              Width="200"
                              Height="40"
                              Padding="10"
                              HorizontalAlignment="Left"
                              Margin="25 0 0 0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"></ComboBox>
                    </StackPanel>
                    <DataGrid Margin="20 20 20 0"
                              ItemsSource="{Binding DanhSachLopHoc}"
                              Style="{StaticResource DataGridStyle1}"
                              RowStyle="{StaticResource DataGridRowStyle1}"
                              CellStyle="{StaticResource DataGridCellStyle1}"
                              Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="940">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <TextBlock Margin="20 0 0 0"
                                                       FontSize="14"
                                                       Text="{Binding TenLop}"/>
                                            <StackPanel HorizontalAlignment="Right"
                                                        Orientation="Horizontal">
                                                <Button 
                                                Content="Xem lớp"     
                                                />
                                            <Button 
                                                Content="Sửa thông tin lớp"        
                                                />
                                                <Button 
                                                Content="Xoá lớp"                               
                                                />
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
