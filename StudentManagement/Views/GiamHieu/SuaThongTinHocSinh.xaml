            <TextBlock Text="Sửa Thông Tin Học Sinh"
                       FontSize="24"
                       Margin="25 15 0 0"
                       Width="300"
                       Height="50"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Resources/Images/NewLogo.jpg"
                   Height="400"
                   Width="400"
                   Grid.ColumnSpan="2"
                   Panel.ZIndex="0"
                   Margin="10"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"/>
            <Grid       VerticalAlignment="Top"
                        Margin="0 100 0 0"
                        Background="#ffffff"
                        x:Name="ChangegrdSelectImg"
                        Width="150"
                        Height="150" >
                <Rectangle 
                                x:Name="ChangerecImage"
                                StrokeDashArray="4 2" 
                                Stroke="#333333" 
                                StrokeThickness="4" 
                                RadiusX="4" 
                                RadiusY="4"
                                Width="150"
                                Height="150" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" />
                <Button 
                            x:Name="btnSelectImage"
                            Command="{Binding ChangeImage}"
                            CommandParameter="{Binding ElementName=ChangegrdSelectImg}"
                            Height="35" 
                            Width="100" 
                            Content="Thêm hình ảnh" 
                            FontSize="14"
                            Foreground="#FFFFFF"
                            Background="#0099FF"
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" 
                            ToolTip="Chọn ảnh"
                            Margin="0,0,0,12" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            FocusVisualStyle="{x:Null}"
                            Padding="0"/>
                <materialDesign:PackIcon 
                            x:Name="iconImage" 
                            Kind="FileImageOutline" 
                            Foreground="#333333"
                            Width="64" Height="54"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"  
                            Margin="0,25,0,0"/>
            </Grid>
            <StackPanel Grid.Column="1">
                <TextBox Margin="20 20 20 0"
                         materialDesign:HintAssist.Hint="Họ tên"
                         x:Name="HoTen"
                         Background="#ffffff"
                         Width="450"
                         HorizontalAlignment="Left"
                         Text="{Binding HocSinhHienTai.TenHocSinh}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <DatePicker Margin="20 20 20 0"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            x:Name="NgaySinh"
                            Background="#ffffff"
                            Width="450"
                            HorizontalAlignment="Left"
                            materialDesign:HintAssist.Hint="Ngày sinh"
                            SelectedDate ="{Binding HocSinhHienTai.NgaySinh}">
                </DatePicker>
                <StackPanel Orientation="Horizontal"
                            Margin="20 20 20 0"
                            Background="#ffffff"
                            Width="450"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Giới tính: "></TextBlock>
                    <RadioButton Content="Nam"
                                 Margin="20 0 20 0"
                                 x:Name="Male"
                                 IsChecked="True">

                    </RadioButton>
                    <RadioButton Content="Nữ"
                                 x:Name="Female">

                    </RadioButton>
                </StackPanel>
                <TextBox Margin="20 20 20 0"
                         x:Name="DiaChi"
                         Background="#ffffff"
                         Width="450"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="Địa chỉ"
                         Text="{Binding HocSinhHienTai.DiaChi}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Margin="20 20 20 0"
                         x:Name="Email"
                         Background="#ffffff"
                         Width="450"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="Email"
                         Text="{Binding HocSinhHienTai.Email}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="20 20 20 0">
                    <Button Style="{StaticResource InteractiveButton}"
                            Content="Xác nhận"
                            Width="100"
                            Height="40"
                            Margin="0 0 20 0"
                            Command="{Binding ConfirmChange}">
                    </Button>
                    <Button Style="{StaticResource InteractiveButton}"
                            Content="Hủy"
                            Width="100"
                            Height="40"
                            Command="{Binding CancelChange}">
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
