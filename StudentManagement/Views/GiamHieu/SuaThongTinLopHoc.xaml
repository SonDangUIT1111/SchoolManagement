<Window x:Class="StudentManagement.Views.GiamHieu.SuaThongTinLopHoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement.Views.GiamHieu"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        xmlns:uc="clr-namespace:StudentManagement.Resources.User_Controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="Sửa thông tin lớp học" Height="450" Width="600"
        DataContext="{StaticResource SuaLopVM}"
        Name="SuaLopWD"
        Icon="ThongTinTruong1.ico">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadWindow}"
                               CommandParameter="{Binding ElementName=SuaLopWD}">
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <uc:Title_Bar_Log Panel.ZIndex="2"/>
        <Separator VerticalAlignment="Bottom"
                       Background="#CCCCCC"
                       Margin="0 0 0 -2"/>
        <Border Background="#FFFFFF"
                BorderBrush="#0099FF"
                BorderThickness="2"
                CornerRadius="20"
                Grid.RowSpan="2"/>
        <Image Source="/Resources/Images/EducationBg.jpg"
                Height="180"
                Width="180"
                Grid.Row="1"
                Panel.ZIndex="0"
                Margin="10"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal" 
                        Width="512" 
                        Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
            <Path Margin="25,20,0,0" Width="30" Height="30" Data="M16.19 2H7.81C4.17 2 2 4.17 2 7.81V16.18C2 19.83 4.17 22 7.81 22H16.18C19.82 22 21.99 19.83 21.99 16.19V7.81C22 4.17 19.83 2 16.19 2ZM10.95 17.51C10.66 17.8 10.11 18.08 9.71 18.14L7.25 18.49C7.16 18.5 7.07 18.51 6.98 18.51C6.57 18.51 6.19 18.37 5.92 18.1C5.59 17.77 5.45 17.29 5.53 16.76L5.88 14.3C5.94 13.89 6.21 13.35 6.51 13.06L10.97 8.6C11.05 8.81 11.13 9.02 11.24 9.26C11.34 9.47 11.45 9.69 11.57 9.89C11.67 10.06 11.78 10.22 11.87 10.34C11.98 10.51 12.11 10.67 12.19 10.76C12.24 10.83 12.28 10.88 12.3 10.9C12.55 11.2 12.84 11.48 13.09 11.69C13.16 11.76 13.2 11.8 13.22 11.81C13.37 11.93 13.52 12.05 13.65 12.14C13.81 12.26 13.97 12.37 14.14 12.46C14.34 12.58 14.56 12.69 14.78 12.8C15.01 12.9 15.22 12.99 15.43 13.06L10.95 17.51ZM17.37 11.09L16.45 12.02C16.39 12.08 16.31 12.11 16.23 12.11C16.2 12.11 16.16 12.11 16.14 12.1C14.11 11.52 12.49 9.9 11.91 7.87C11.88 7.76 11.91 7.64 11.99 7.57L12.92 6.64C14.44 5.12 15.89 5.15 17.38 6.64C18.14 7.4 18.51 8.13 18.51 8.89C18.5 9.61 18.13 10.33 17.37 11.09Z" Stretch="Fill" >
                <Path.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="#2af598" Offset="1"/>
                        <GradientStop Color="#009efd" Offset="0.3"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
            <TextBlock Text="Sửa thông tin lớp học"
                       FontSize="24"
                       Margin="10 20 0 0"
                       Width="300"
                       Height="50"
                       FontWeight="DemiBold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0 0 0 0">
            
            <TextBox
                materialDesign:HintAssist.Hint="Nhập tên lớp"
                x:Name="EditClassName"
                HorizontalAlignment="Center"
                Margin="10 10 10 0"    
                Width="350"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding LopHocHienTai.TenLop}">
            </TextBox>
            <!--<TextBox
                materialDesign:HintAssist.Hint="Nhập năm học"
                x:Name="EditAcademyYear"
                HorizontalAlignment="Center"
                Margin="10 20 10 0"    
                Width="350"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding LopHocHienTai.NienKhoa}">
            </TextBox>-->
            <ComboBox 
                materialDesign:HintAssist.Hint="Niên khoá"
                x:Name="NienKhoaCmB"
                IsEditable="False"
                Margin="10 20 10 0"    
                Width="350"
                ItemsSource="{Binding NienKhoaComboBox}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}">
            </ComboBox>
            <TextBox
                materialDesign:HintAssist.Hint="Số lượng học sinh"
                x:Name="EditNumberOfStudent"
                HorizontalAlignment="Center"
                Margin="10 20 10 0"    
                Width="350"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding LopHocHienTai.SiSo}">
            </TextBox>
            <ComboBox 
                materialDesign:HintAssist.Hint="Giáo viên chủ nhiệm"
                x:Name="EditFormTeacher"
                IsEditable="False"
                Margin="10 20 10 0"    
                Width="350"
                ItemsSource="{Binding GiaoVienComboBox}"
                DisplayMemberPath="TenGiaoVien"
                Style="{StaticResource MaterialDesignOutlinedComboBox}">
            </ComboBox>
            <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0 20 0 0">
                <Button 
                        Content="Xác nhận"
                        Command="{Binding EditClass}"
                        Style="{StaticResource InteractiveButton}"
                        Width="100"
                        Height="40">    

                </Button>
                <Button 
                        Content="Huỷ"
                        Margin="10 0 0 0"
                        Command="{Binding CancelEditClass}"
                        Style="{StaticResource InteractiveButton}"
                        Width="100"
                        Height="40">

                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
