                <TextBlock Text="Thêm Giáo Viên"
                       FontSize="24"
                       Margin="25 15 0 0"
                       Width="250"
                       Height="50"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </StackPanel>
            <Grid Height="518">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>

                <!--<Image Grid.Column="0" 
                       Source="{Binding Avatar}"
                       Width="200"
                       Height="200"
                       Margin="0 70 0 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Stretch="Fill">
                </Image>-->
                <Grid
                        x:Name="ChangegrdSelectImg"
                        VerticalAlignment="Center"
                        Width="150"
                        Height="150" >
                    <Rectangle 
                                x:Name="ChangerecImage"
                                StrokeDashArray="4 2" 
                                Stroke="#333333" 
                                StrokeThickness="4" 
                                RadiusX="4" 
                                RadiusY="4"
                                Width="150"
                                Height="150" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" />
                    <Button 
                            x:Name="btnSelectImage"
                            Command="{Binding ChangeImage}"
                            CommandParameter="{Binding ElementName=ChangegrdSelectImg}"
                            Height="35" 
                            Width="100" 
                            Content="Thêm hình ảnh" 
                            FontSize="14"
                            Foreground="#FFFFFF"
                            Background="#0099FF"
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" 
                            ToolTip="Chọn ảnh"
                            Margin="0,0,0,12" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            FocusVisualStyle="{x:Null}"
                            Padding="0"/>
                    <materialDesign:PackIcon 
                            x:Name="iconImage" 
                            Kind="FileImageOutline" 
                            Foreground="#333333"
                            Width="64" Height="54"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"  
                            Margin="0,25,0,0"/>
                </Grid>
                <StackPanel Orientation="Vertical"
                        Margin="0,50,0,0"
                        VerticalAlignment="Top" 
                        Height="518"
                        Grid.Column="1">

                    <TextBlock Text="Tên Giáo Viên"
                       FontSize="17"
                       Margin="25 10 0 0"
                       Width="250"
                       Height="29"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="TenGV"
                         materialDesign:HintAssist.Hint="Tên Giáo Viên"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="540"
                         Height="40"
                         Padding="10"
                         Margin="25 0 0 0"
                         HorizontalAlignment="Left"/>
                    <TextBlock Text="Ngày sinh"
                       FontSize="17"
                       Margin="25 10 0 0"
                       Width="250"
                       Height="29"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                    <DatePicker
                    x:Name="NgaySinh"
                    Width="250"
                    HorizontalAlignment="Left"
                    Margin="25 10 0 0"/>

                    <!--<TextBox x:Name="NgaySinh"
                         materialDesign:HintAssist.Hint="Search ... "
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="640"
                         Height="40"
                         Padding="10"
                         Margin="25 0 0 0"
                         HorizontalAlignment="Left"/>-->
                    <TextBlock Text="Giới Tính"
                       FontSize="17"
                       Margin="25 10 0 0"
                       Width="250"
                       Height="29"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                    <ComboBox x:Name="GioiTinh"
                          materialDesign:HintAssist.Hint="Giới tính"
                          IsEditable="False"
                          Width="200"
                          Height="40"
                          Padding="10"
                          HorizontalAlignment="Left"
                          Margin="25 0 0 0"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem>Nữ</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Nam</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="Địa chỉ"
                       FontSize="17"
                       Margin="25 10 0 0"
                       Width="250"
                       Height="29"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="DiaChi"
                         materialDesign:HintAssist.Hint="Địa chỉ"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="540"
                         Height="40"
                         Padding="10"
                         Margin="25 0 0 0"
                         HorizontalAlignment="Left"/>
                    <TextBlock Text="Email"
                       FontSize="17"
                       Margin="25 10 0 0"
                       Width="250"
                       Height="29"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="Email"
                         materialDesign:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="540"
                         Height="40"
                         Padding="10"
                         Margin="25 0 0 0"
                         HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal"/>
                    <StackPanel Orientation="Horizontal"/>

                </StackPanel>
            </Grid>
            
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource InteractiveButton}"
                        Background="#2af598"
                        Foreground="#000000"
                        Width="150"
                        Content="Thêm"
                        Margin="0 0 20 10"
                        Command="{Binding AddGiaoVien}"/>
                <Button Style="{StaticResource InteractiveButton}"
                        Background="#CFCDCB"
                        Foreground="#000000"
                        Width="150"
                        Content="Hủy"
                        Margin="0 0 20 10"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
