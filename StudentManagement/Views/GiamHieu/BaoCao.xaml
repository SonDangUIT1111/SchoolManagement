<Page x:Class="StudentManagement.Views.GiamHieu.BaoCao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManagement.Views.GiamHieu"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1033" 
      d:DesignWidth="1056"
      Background="#FFECECEC"
      Title="BaoCao"
      DataContext="{StaticResource BaoCaoVM}"
      >
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="228" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="#110357" 
                BorderThickness="0" 
                CornerRadius="30" 
                Grid.Row="0" 
                Background="#FFA03697" 
                Margin="12" >
            <Grid>
                <TextBlock Text="Báo cáo" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           FontSize="60" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20"/>
                <Border BorderBrush="#FF000000" 
                        BorderThickness="0" 
                        CornerRadius="30" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        Width="325"
                        Height="78"
                        Margin="21"
                        Background="White">
                </Border>
            </Grid>
        </Border>
        <Border BorderBrush="#FF000000"  BorderThickness="0" CornerRadius="10" Grid.Row="1" Background="White" Margin="12">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                Margin="20 10 0 0"
                >
                <ComboBox x:Name="cmbNienKhoa"
                    Width="256"
                    materialDesign:HintAssist.Hint="Niên khoá"
                    IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                    ItemsSource="{Binding NienKhoaComboBox}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                <ComboBox x:Name="cmbMonHoc"
                    Width="256" 
                    Margin="20 0 0 0"
                    materialDesign:HintAssist.Hint="Môn học"
                    IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                    ItemsSource="{Binding MonComboBox}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            </StackPanel>
        </Border>

    </Grid>
</Page>
