                HorizontalAlignment="Right"
                Style="{StaticResource SideButton}"
                BorderThickness="0"
                Grid.Column="1"
                Grid.Row="1"
                Width="325"
                Height="78"
                Margin="33"
                Command="{Binding CapNhatThongTin}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"></Setter>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="7"/>
            </Button.Effect>
            <Grid Width="325"
                  Height="78">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="81"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Width="54"
                        Height="54"
                        CornerRadius="10"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        x:Name="imageAvatar"></Border>
                <TextBlock Grid.Column="1"
                           x:Name="UserName"
                           FontSize="20"
                           VerticalAlignment="Bottom"
                           Margin="10 0 0 17"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding SayHello}"
                           FontSize="20"
                           VerticalAlignment="Top"
                           Margin="10 10 0 0"
                           FontWeight="Bold"
